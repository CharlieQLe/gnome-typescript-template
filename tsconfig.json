{
    "compilerOptions": {
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "strict": true,
        "allowJs": true,
        "paths": {
            "*": [
                "*",
                "gi-types/*"
            ],
            "resource:///io/github/charlieqle/GnomeTypescriptTemplate/js/*": [
                "src/*"
            ]
	    },
	    "target": "ES2021",
        "baseUrl": ".",
        "moduleResolution": "node",
        "module": "ES2020",
        "outDir": "_build",
        "lib": [
            "ES2021"
        ]
    },
    "include": [
        "gi-types/*",
        "src/**/*",
        "src/*"
    ]
}