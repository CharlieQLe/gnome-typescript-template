{
    "id" : "io.github.charlieqle.GnomeTypescriptTemplate",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.node18"
    ],
    "command" : "io.github.charlieqle.GnomeTypescriptTemplate",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name": "yarn-deps",
            "buildsystem": "simple",
            "build-commands": [
                "/usr/lib/sdk/node18/enable.sh",
                "cp -r $FLATPAK_BUILDER_BUILDDIR/flatpak-node/yarn-mirror/ /app"
            ],
            "sources": [
                "generated-sources.json"
            ]
        },
        {
            "name" : "gnome-typescript-template",
            "builddir" : true,
            "buildsystem" : "meson",
            "modules": [
                {
                    "name": "blueprint-compiler",
                    "buildsystem": "meson",
                    "sources": [
                        {
                            "type": "git",
                            "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                            "tag": "v0.6.0"
                        }
                    ]
                }
            ],
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                }
            ]
        }
    ]
}
